{% extends 'layouts/base.html.twig' %}

{% block title 'Liste de Presence' %}

{% block body %}

 <h1 class="text-muted text-center">Liste de presence</h1>
 <table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nom/Prenom</th>
      <th scope="col">Contact</th>
      <th scope="col">Heure d'arriver</th>
      <th scope="col">Heure de depart</th>
    </tr>
  </thead>
  <tbody>

   {% for teacher in teachers %}
    <tr>
      
      <td>{{ teacher.id }}</td>
      <td>{{ teacher.title }} {{ teacher.nom }} {{ teacher.prenom }}</td>
      <td>{{ teacher.contact }}</td>
      <td><input  type="time" id="time_arrived" class="form-control" name="time"></td>
      <td><input  type="time" id="time_gone" class="form-control" name="time"></td>
    </tr>

    {% endfor %}
    
  </tbody>
</table>
{% endblock %}
